{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/GachaMoon.WebApi/bin/Debug/net8.0/GachaMoon.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/GachaMoon.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^.*Now listening on:\\s+\"(https?://\\S+)\"",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "Parser Robot",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_robot",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Robots/GachaMoon.Robots.ScreenshotDataParser/bin/Debug/net8.0/GachaMoon.Robots.ScreenshotDataParser.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Robots/GachaMoon.Robots.ScreenshotDataParser",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "Alias ScrapperRobot",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_alias_scrapper",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Robots/GachaMoon.Robots.AnimeAliasScrapper/bin/Debug/net8.0/GachaMoon.Robots.AnimeAliasScrapper.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Robots/GachaMoon.Robots.AnimeAliasScrapper",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "AMQ Scrapper",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_amq_scrapper",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Robots/GachaMoon.Robots.SongsDataParser/bin/Debug/net8.0/GachaMoon.Robots.SongsDataParser.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Robots/GachaMoon.Robots.SongsDataParser",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
    ]
}
